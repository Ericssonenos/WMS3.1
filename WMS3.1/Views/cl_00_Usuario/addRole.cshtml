@model WMS3._1.Models.Sistema.UserView

@{
    ViewBag.Title = "Add Permissão";
}

<h2>Permissões do Usuário - @Model.Nome</h2>
<h3> @ViewBag.Error</h3>
@using (Html.BeginForm("addRole", "cl_00_Usuario", FormMethod.Post))
{
<div class="form-horizontal">

    <div class="form-group">
        @Html.Label("Permissões")
        <div>
            @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control"})
        </div>
    </div>
    @Html.HiddenFor(model => model.UserId)

    @Html.ActionLink("Voltar", "Role", new { Id = Model.UserId }, new { @class = "btn btn-primary"})
    <input type="submit" value="add Permissão" id="addRole" class="btn btn-info"/>

</div>
}
